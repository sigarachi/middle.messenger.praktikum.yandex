{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "declaration": false,
    "module": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
